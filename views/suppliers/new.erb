<form method="post" action="/suppliers">
  <label for="name-field">Supplier Name:</label>
  <input
  required
  type="text"
  name="name"
  id="name-field"
  />

  <label for="email">Email Address:</label>
  <input
  required
  type="text"
  name="email"
  id="email-field"
  />

  <label for="phone">Phone Number:</label>
  <input
  required
  min="000000000001"
  max="999999999999"
  class="supplier-phone-field"
  type="number"
  name="phone"
  id="phone-field"
  />

  <input class="add-supplier-btn" type="submit" value="Add Supplier" height="250px">
</form>
